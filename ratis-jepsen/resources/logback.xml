<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>jepsen.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Jepsen specific loggers -->
    <logger name="jepsen" level="INFO"/>
    <logger name="jepsen.core" level="INFO"/>
    <logger name="jepsen.control" level="INFO"/>
    <logger name="jepsen.db" level="DEBUG"/>
    <logger name="jepsen.client" level="DEBUG"/>
    <logger name="jepsen.nemesis" level="INFO"/>
    <logger name="jepsen.generator" level="INFO"/>
    <logger name="jepsen.checker" level="INFO"/>
    
    <!-- Ratis loggers - keep these at WARN to reduce noise -->
    <logger name="org.apache.ratis" level="WARN"/>
    <logger name="org.apache.ratis.client" level="INFO"/>
    <logger name="org.apache.ratis.server" level="WARN"/>
    <logger name="org.apache.ratis.grpc" level="WARN"/>
    
    <!-- Third party loggers -->
    <logger name="org.eclipse.jetty" level="WARN"/>
    <logger name="io.grpc" level="WARN"/>
    <logger name="io.netty" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration> 